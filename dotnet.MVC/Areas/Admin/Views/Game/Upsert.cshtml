@model GameViewModel

<form method="post" enctype="multipart/form-data">
	<input asp-for="Game.Id" hidden />
	<input asp-for="Game.ImageUrl" hidden />
	<div class="row">
		<center> 
			<img src="@Model.Game.ImageUrl" style="width:50%;" />
		</center>
	</div>
	<div class="row" >
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-primary">@(Model.Game.Id != 0 ? "Update" : "Add") game</h2>
				<hr />
			</div>
			<div class="mb-3">
				<label asp-for="Game.Title"></label>
				<input asp-for="Game.Title" class="form-control shadow" />
				<span asp-validation-for="Game.Title" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Game.GenreId"></label>
				<select asp-for="Game.GenreId" asp-items="@Model.GenreList" class="form-select shadow">
					<option disabled selected> Select Genre </option>
				</select>
				<span asp-validation-for="Game.GenreId" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Game.ImageUrl"></label>
				<input type="file" name="imageFile" class="form-control shadow" />
				<span class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Game.StudioId"></label>
				<select asp-for="Game.StudioId" asp-items="@Model.StudioList" class="form-select shadow">
					<option disabled selected> Select Studio </option>
				</select>
				<span asp-validation-for="Game.StudioId" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label class="form-label mt-4" asp-for="Game.Description"></label>
				<textarea asp-for="Game.Description" maxlength="512" class="form-control shadow"></textarea>
				<span asp-validation-for="Game.Description" class="text-danger"></span>
			</div>
			@if (@Model.Game.Id != 0)
			{
				<button type="submit" class="btn btn-primary" style="width:150px">Update game</button>

			}
			else
			{
				<button type="submit" class="btn btn-primary" style="width:150px">Add game</button>
			}
			<a asp-controller="Game" asp-action="Index" class="btn btn-secondary" style="width:150px">Cancel</a>
		</div>

	</div>
	
</form>

@section Scripts {
@{
	<partial name="_ValidationScriptsPartial" />
}
}