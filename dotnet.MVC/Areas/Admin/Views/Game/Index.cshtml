@model IEnumerable<Game>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4"> 
        <div class="col-6">
			<h1 class="text-primary">Games</h1>
		</div>

        <div class="col-6 text-end">
            <a asp-controller="Game" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i>&nbsp Add game
                </a>
        </div>
    </div>
</div>

<table id="tableData" class="table table-secondary table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Genre
            </th>
            <th>
                Description
            </th>
            <th>
                Studio
            </th>
            <th>

            </th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script src="~/js/game.js"></script>
}
