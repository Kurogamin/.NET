@model IEnumerable<Game>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4"> 
        <div class="col-6">
			<h1 class="text-primary">Games</h1>
		</div>

        <div class="col-6 text-end">
            <a asp-controller="Game" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i>&nbsp Add game
                </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-hover table-dark" style="width:100%">
    <thead>
        <tr>
            <th>
                Game Title
            </th>
            <th>
                Game Genre
            </th>
            <th>
                Game Description
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
		{
			<tr>
				<td width="25%">
					@item.Title
				</td>
                <td width="25%">
					@item.Genre
				</td>
                <td width="25%">
					@item.Description
				</td>
                <td>
                    <div class="w-75 btn-group">
                        <a class="btn btn-primary mx-2" asp-controller="Game" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                        <a class="btn btn-danger mx-2" asp-controller="Game" asp-action="Remove" asp-route-id="@item.Id"><i class="bi bi-trash"></i> &nbsp; Remove</a>
                    </div>
                </td>
			</tr>
		}
    </tbody>
</table>
