@model Studio

<form method="post" asp-action="Remove">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Remove game</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name">@Model.Name</label>
		</div>
		<div class="mb-3">
			<label class="form-label mt-4" asp-for="DisplayOrder">@Model.DisplayOrder</label>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Remove studio</button>
		<a asp-controller="Game" asp-action="Index" class="btn btn-secondary" style="width:150px">Cancel</a>
	</div>
</form>

@section Scripts {
@{
	<partial name="_ValidationScriptsPartial" />
}
}