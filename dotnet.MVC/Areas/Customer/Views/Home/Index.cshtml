@model IEnumerable<Game>

<div class="row pb-3">
	@foreach(var game in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded"> 
						<img src="@game.ImageUrl" class="card-img-top rounded" />
					</div>
					<div class="card-body pb-0">
						<div class="pl-1">
							<p class="card-title h7 text-dark opacity-75 text-uppercase text-center">@game.Title</p>
							<p class="card-title text-warning text-center">by <b>@game.Studio.Name</b></p>
						</div>
						<div class="pl-1">
							<p class="text-dark text-opacity-75 text-center"><span class="text-decoration-underline">@game.Genre.Name</span></p>
						</div>
					</div>
					<div>
						<a asp-action="Details" asp-route-id="@game.Id" class="btn btn-primary bg-gradient border-0 form-control">
							Details
						</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>